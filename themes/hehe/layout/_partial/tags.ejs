<% if (site.tags.length){ %>
  <div class="widget-wrap">
      <h2> <%- __("tag") %></h2>
    <div class="widget">
            <ul class="nav sidebar-categories margin-bottom-40">
                    <% site.tags.forEach(function(tag){ %>
                  <li>
                    <a href="<%= url_for(tag.path) %>"><%= tag.name %> </a>
                  </li>
                    <% }); %>
                  </ul>
          </div>
    </div>
<% } %>